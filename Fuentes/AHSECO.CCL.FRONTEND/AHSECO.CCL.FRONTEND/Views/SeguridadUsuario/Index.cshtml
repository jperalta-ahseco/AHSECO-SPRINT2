
@{
    ViewBag.Title = "Usuarios";
}

<div class="container-fluid" style="margin-right: 15px;">
    <h4><i class="glyphicon glyphicon-cog"></i> @ViewBag.Title</h4>
    <div class="box-inner">
        <div class="box-header well" data-original-title="">
            <h2><i class="glyphicon glyphicon-list"></i> Mantenimiento de Usuarios</h2>
        </div>
        <div class="box-content">
            <form class="form-horizontal" id="frmUsu">
                <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#modalUsuario" id="btnNuevo"><i class="fa fa-plus" aria-hidden="true"></i> Agregar Nuevo</button>
                <button type="button" class="btn btn-info btn-sm" id="btnExportar" href="SeguridadUsuario/ExportarUsuarios"><i class="fa fa-table" aria-hidden="true"></i> Exportar</button>
            </form>
            <br />
            <div class="table-responsive">
                <table id="tblUsuarios" class="table table-bordered table-striped table-hover table-condensed" width="100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th width="70px">Usuario</th>
                            <th width="150px">Nombres</th>
                            <th width="150px">Apellidos</th>
                            <th style="text-align: center;" width="100px">Email Usuario</th>
                            <th style="text-align: center;" width="70px">Validar AD</th>
                            <th style="text-align: center;" width="70px">Habilitado</th>
                            <th style="text-align: center;" width="70px">&Uacute;ltima Sesi&oacute;n</th>
                            <th style="text-align: center;" width="40px">Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!--Modal Usuario-->
<div class="modal fade" id="modalUsuario" tabindex="-1" role="dialog" aria-labelledby="titleModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" aria-label="Close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="tituloModal">Nuevo Usuario</h4>
            </div>
            <div class="modal-body">
                <form id="frmUsuario" class="container-fluid row">
                    <div class="col-md-6 col-xs-12">
                        <div class="form-group">
                            <input type="hidden" id="hdnIdUsuario" />
                            <label for="cmbTipoDocumento">Tipo Documento</label>
                            <select class="form-control input-sm" style="width:100%;" id="cmbTipoDocumento"></select>
                        </div>
                        <div class="form-group">
                            <label for="txtNumeroDocumento">N&uacute;mero Documento</label>
                            <input class="form-control input-sm" type="text" id="txtNumeroDocumento" maxlength="12" />
                        </div>
                        <div class="form-group">
                            <label for="txtNombres">Nombres</label>
                            <input class="form-control input-sm" type="text" id="txtNombres" maxlength="100" />
                        </div>
                        <div class="form-group">
                            <label for="txtApellidos">Apellidos</label>
                            <input class="form-control input-sm" type="text" id="txtApellidos" maxlength="100" />
                        </div>
                        <div class="form-group">
                            <label for="txEmail">Email</label>
                            <input class="form-control input-sm" type="text" id="txEmail" maxlength="100" />
                        </div>
                        <div class="form-group">
                            <label for="chkEstado">Habilitado</label>
                            <input type="checkbox" class="form-check-input" id="chkHabilitado">
                        </div>
                    </div>
                    <div class="col-md-5 col-md-offset-1 col-xs-12">
                        <div class="form-group">
                            <label for="txtUsuario">Usuario</label>
                            <input class="form-control input-sm" type="text" id="txtUsuario" maxlength="20" />
                        </div>
                        <div class="form-group">
                            <label for="txtPassword">Password</label>
                            <input class="form-control input-sm" type="password" id="txtPassword" maxlength="20" />
                        </div>
                        <div class="form-group" >
                            <label for="chkValidarAd">Validar AD</label>
                            <input type="checkbox" class="form-check-input" id="chkValidarAd">
                        </div>
                        <div class="form-group">
                            <label for="txtUsuarioRed">Usuario Red</label>
                            <input class="form-control input-sm" type="text" id="txtUsuarioRed" maxlength="20" disabled="disabled" />
                        </div>
                        <div class="form-group">
                            <label for="cmbEjecutora">Ejecutora</label>
                            <select class="form-control input-sm" style="width:100%;" id="cmbEjecutora"></select>
                        </div>
                        <div class="form-group">
                            <label for="cmbEps">Empleado</label>
                            <select class="form-control input-sm" style="width:100%;" id="cmbEmpleado" disabled></select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary btn-sm" type="button" id="btnGuardar">Guardar</button>
                <button class="btn btn-default btn-sm" type="button" data-dismiss="modal" id="btnCerrar">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/resources/js/app/seguridad/usuario/usuario.js"></script>
}