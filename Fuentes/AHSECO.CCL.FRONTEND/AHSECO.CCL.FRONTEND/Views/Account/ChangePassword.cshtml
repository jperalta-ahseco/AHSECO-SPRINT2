
@{
    ViewBag.Title = "Cambiar Password";
}

<div class="container-fluid" style="margin-right: 15px;">
    <h4><i class="glyphicon glyphicon-cog"></i> @ViewBag.Title</h4>
    <div class="box-inner">
        <div class="box-header well" data-original-title="">
            <h2><i class="glyphicon glyphicon-list"></i> Cambiar Password</h2>
        </div>
        <div class="box-content">
            <form id="frmCambiarPassword" class="container-fluid form-horizontal">
                <div class="form-group">
                    <label for="txtPasswordActual" class="col-md-3">Password Actual</label>
                    <div class="col-md-8">
                        <div class="col-md-7">
                            <input class="form-control input-sm" type="password" id="txtPasswordActual" maxlength="20" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="txtPasswordNuevo" class="col-md-3">Password Nuevo</label>
                    <div class="col-md-8">
                        <div class="col-md-7">
                            <input class="form-control input-sm" type="password" id="txtPasswordNuevo" maxlength="20" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="txtPasswordConfirmar" class="col-md-3">Confirmar Password</label>
                    <div class="col-md-8">
                        <div class="col-md-7">
                            <input class="form-control input-sm" type="password" id="txtPasswordConfirmar" maxlength="20" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-default btn-sm" id="btnGuardar">Cambiar Password</button>
                </div>
</form>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/resources/js/app/seguridad/usuario/changePassword.js"></script>
}