<div class="box-inner">
    <div class="box-content">
        <div class="row container-fluid">
            <div class="col-md-4 col-sm-12">
                <label for="dateSolicitud">Fecha de Reclamo: </label>
                <div class="input-group date">
                    <input disabled type="text" class="form-control input-sm" id="dateSolicitud" aria-describedby="sizing-addon3" placeholder="dd/mm/aaaa" maxlength="10">
                    <span class="input-group-addon input-sm" id="openRegdateSolicitud">
                        <i class="fa fa-calendar"></i>
                    </span>
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <label for="cmbUrgencia">Urgencia:</label>
                <div class="input-group col-sm-12 col-md-12 col-lg-12">
                    <select disabled style="width:100%" id="cmbUrgencia" type="text" class="input form-control input-sm">
                    </select>
                </div>
            </div>
            <div class="col-md-4 col-sm-12">
                <label for="cmbMotivo">Motivo:</label>
                <div class="input-group col-sm-12 col-md-12 col-lg-12">
                    <select disabled style="width:100%" id="cmbMotivo" type="text" class="input form-control input-sm">
                    </select>
                </div>
            </div>
        </div>
        <br />
        <div class="row container-fluid">
            <div class="col-md-12">
                <div class="form-group">
                    <input type="hidden" id="hdnIdReclamo" />
                    <label for="txtReclamo">Reclamo</label>
                    <textarea disabled class="form-control" rows="5" maxlength="4000" id="txtReclamo" placeholder="Ingrese el detalle del reclamo."></textarea>
                </div>
            </div>
        </div>
    </div>
</div>
