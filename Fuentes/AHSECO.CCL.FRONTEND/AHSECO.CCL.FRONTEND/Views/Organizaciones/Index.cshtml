@{
    ViewBag.Title = "Mantenimiento de Organizaciones";

}
<div class="container-fluid" style="margin-right: 15px;">
    <h4><i class="glyphicon glyphicon-cog"></i> @ViewBag.Title</h4>
    <div class="box-inner">
        <div class="box-header well" data-original-title="">
            <h2><i class="glyphicon glyphicon-list"></i> Organizaciones</h2>
        </div>
        <div class="box-content">
            <form id="formFiltros" class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="txtFiltro">Ingresar Ruc o Raz&oacute;n Social</label>
                            <input type="text" class="form-control" id="txtFiltro" maxlength="40" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <div>
                                <button class="btn btn-primary btn-sm" type="button" id="btnBuscar">Buscar</button>
                                <button class="btn btn-primary btn-sm" type="button" id="btnNuevo" data-toggle="modal" data-target="#modalOrganizacion">Nueva Organizaci&oacute;n</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <br />
            <div class="table-responsive">
                <table id="tblOrganizaciones" class="table table-hover table-condensed table-striped table-bordered" width="100%">
                    <thead>
                        <tr>
                            <th style="text-align: center;" width="0">Id</th>
                            <th style="text-align: center;" width="30px">Ruc</th>
                            <th style="text-align: center;">Raz&oacute;n Social</th>
                            <th style="text-align: center;" width="150px">Departamento</th>
                            <th style="text-align: center;" width="150px">Provincia</th>
                            <th style="text-align: center;" width="150px">Distrito</th>
                            <th style="text-align: center;" width="60px">Estado</th>
                            <th style="text-align: center;" width="60px"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Editar -->
<div class="modal fade" id="modalOrganizacion" tabindex="-1" role="dialog" aria-labelledby="titleModal"
     aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <!-- Modal dialog -->
    <div class="modal-dialog modal-lg" role="document">
        <!-- Modal content -->
        <div class="modal-content">
            <!-- Modal content header -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="tituloModal">Editar Organizaci&oacute;n Financiadora</h4>
            </div>
            <!-- Modal content body -->
            <div class="modal-body">
                <form id="formRegistro" class="container-fluid row">
                    <div class="col-md-3 form-group">
                        <input type="hidden" id="hdnIdOrganizacion" />
                        <label for="txtRuc">Ruc</label>
                        <input type="text" class="form-control input-entero-left" id="txtRuc" maxlength="11" />
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="txtRazonSocial">Raz&oacute;n Social</label>
                        <input type="text" class="form-control" id="txtRazonSocial" maxlength="40" />
                    </div>
                    <div class="col-md-3 form-group">
                        <label for="lblEstado">Estado</label>
                        <label class="form-control" id="lblEstado" disabled></label>
                    </div>
                    <div class="col-md-4 form-group">
                        <label for="cmbDepartamento">Departamento</label>
                        <select class="form-control select2" style="width:100%;" id="cmbDepartamento" data-selected=""></select>
                    </div>
                    <div class="col-md-4 form-group">
                        <label for="cmbProvincia">Provincia</label>
                        <select class="form-control select2" style="width:100%;" id="cmbProvincia" data-selected=""></select>
                    </div>
                    <div class="col-md-4 form-group">
                        <label for="cmbDistrito">Distrito</label>
                        <select class="form-control select2" style="width:100%;" id="cmbDistrito" data-selected=""></select>
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="txtDireccion">Dirección</label>
                        <input type="text" class="form-control" id="txtDireccion" maxlength="100" />
                    </div>
					<div class="col-md-12 form-group">
                        <label for="txtEmail">Email</label>
                        <input type="email" class="form-control" id="txtEmail" maxlength="40" />
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="txtEmail">Email</label>
                        <input type="email" class="form-control" id="txtEmail" maxlength="40" />
                    </div>
                    <div class="col-md-12 form-group">

                        <input type="checkbox" class="form-check-input" id="chkIndicadorEje"> Órgano Ejecutor
                    </div>
                    <div class="col-md-12 form-group">
                        <input type="checkbox" class="form-check-input" id="chkIndicadorEPS" /> EPS
                    </div>
                </form>
            </div>
            <!-- Modal content footer -->
            <div class="modal-footer">
                <button class="btn btn-default btn-sm pull-left" type="button" data-dismiss="modal" id="btnCerrar">Cerrar</button>
                <button class="btn btn-primary btn-sm" type="button" id="btnGuardar">Guardar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Cambiar Estado -->
<div class="modal fade" id="modalCambiarEstado" tabindex="-1" role="dialog" aria-labelledby="titleModal"
     aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <!-- Modal dialog -->
    <div class="modal-dialog modal-sm" role="document">
        <!-- Modal content -->
        <div class="modal-content">
            <!-- Modal content header -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="tituloModalCambiarEstado">Cambiar Estado</h4>
            </div>
            <!-- Modal content body -->
            <div class="modal-body">
                <form id="formRegistroCambiarEstado">
                    <div class="form-group">
                        <input type="hidden" id="hdnIdOrganizacion2" />
                        <label for="cmbEstado">Estado</label>
                        <select class="form-control select2" style="width:100%;" id="cmbEstado" data-selected=""></select>
                    </div>
                </form>
            </div>
            <!-- Modal content footer -->
            <div class="modal-footer">
                <button class="btn btn-default btn-sm pull-left" type="button" data-dismiss="modal" id="btnCerrarCambiarEstado">Cerrar</button>
                <button class="btn btn-primary btn-sm" type="button" id="btnGuardarCambiarEstado">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="~/resources/js/app/mantenimientos/mantenimientoOrganizaciones/organizaciones.js"></script>
}