
@{
    ViewBag.Title = "Mantenimiento de Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="margin-right: 15px;">
    <h4><i class="glyphicon glyphicon-cog"></i> @ViewBag.Title</h4>
    <div class="box-inner">
        <div class="box-header well" data-original-title="">
            <h2><i class="glyphicon glyphicon-list"></i> Bandeja de Empledos</h2>
        </div>
        <div class="box-content">
            <form id="formEmpleado">

                <!--Primera Fila-->
                <div class="row container-fluid">
                    <div class="col-md-4 col-sm-12">
                        <label for="txtNombre">Nombres:</label>
                        <div class="form-group">
                            <input placeholder="Ingresar Nombre" maxlength="100" type="text" class="form-control input-sm" id="txtNombre" value="" tabindex="1">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="txtApePat">Apellido Paterno:</label>
                        <div class="form-group">
                            <input placeholder="Ingresar Apellido Paterno" maxlength="100" type="text" class="form-control input-sm" id="txtApePat" value="" tabindex="2">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="txtApeMat">Apellido Materno:</label>
                        <div class="form-group">
                            <input placeholder="Ingresar Apellido Materno" maxlength="100" type="text" class="form-control input-sm" id="txtApeMat" value="" tabindex="3">
                        </div>
                    </div>
                </div>
                <!--Segunda Fila-->
                <div class="row container-fluid">
                    <div class="col-md-4 col-sm-12">
                        <label for="dateFecIni">Fecha Inicial de Registro:</label>
                        <div class="input-group date">
                            <input type="text" class="form-control input-sm" id="dateFecIni" aria-describedby="sizing-addon3" placeholder="dd/mm/aaaa" maxlength="10" tabindex="4">
                            <span class="input-group-addon input-sm" id="openRegFecIni">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="dateFecFin">Fecha Final de Registro:</label>
                        <div class="input-group date">
                            <input type="text" class="form-control input-sm" id="dateFecFin" aria-describedby="sizing-addon3" placeholder="dd/mm/aaaa" maxlength="10" tabindex="5">
                            <span class="input-group-addon input-sm" id="openRegFecFin">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>

                    <div class="col-md-4 col-sm-12">
                        <div class="form-group">
                            <label for="cmbEstado">Estado:</label>
                            <select class="form-control select2 input-sm" style="width:100%;" id="cmbEstado" tabindex="6"></select>
                        </div>
                    </div>
                </div>

                <!--Tercera Fila-->

                <div class="row container-fluid">
                    <div class="col-md-4 col-sm-12">
                        <label for="txtNumDoc">N&uacute;mero Documento:</label>
                        <div class="form-group">
                            <input placeholder="Ingresar Nombre" maxlength="100" type="text" class="form-control input-sm" id="txtNumDoc" value="" tabindex="7">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="cmbTipo">Tipo:</label>
                        <select class="form-control select2 input-sm" style="width:100%;" id="cmbTipo" tabindex="8"></select>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="cmbCargo">Cargo:</label>
                        <select class="form-control select2 input-sm" style="width:100%;" id="cmbCargo" tabindex="9"></select>
                    </div>
                </div>
                <div class="text-right">
                    <button class="btn btn-success btn-sm " type="button" id="btnNuevo"><i class="fa fa-plus"></i> Agregar Nuevo</button>
                    <button class="btn btn-primary btn-sm" type="button" id="btnBuscar"><i class="fa fa-search"></i> Buscar</button>
                    <span id="hidden_fields"></span>
                    <a class="btn btn-info btn-sm " type="button" id="btnExportar" href="BandejaEmpleados/ExportarEmpleados"><i class="fa fa-table"></i> Exportar</a>

                </div>
            </form>

            <br />
            <div class="table-responsive">
                <table id="tblEmpleado" class="table table-hover table-condensed table-striped table-bordered" width="100%">
                    <thead>
                        <tr>
                            <th style="text-align:center" width="5%"><center>ID</center></th>
                            <th style="text-align: center; width:20%">Nombre Completo</th>
                            <th style="text-align: center; width:10%">N° Documento</th>
                            <th style="text-align: center; width:20%">Cargo</th>
                            <th style="text-align: center; width:15%">Empresa</th>
                            <th style="text-align: center; width:10%">Tipo</th>
                            <th style="text-align: center; width:10%">Estado</th>
                            <th style="text-align:center; width:10%">Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->

@section scripts{
    <script src="~/resources/js/app/mantenimientos/bandejaEmpledos/bandejaEmpleados.js"></script>
}