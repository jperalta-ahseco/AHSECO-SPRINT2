
@{
    ViewBag.Title = "Usuarios por Perfil";
}

<div class="container-fluid" style="margin-right: 15px;">
    <h4><i class="glyphicon glyphicon-cog"></i> @ViewBag.Title</h4>
    <div class="box-inner">
        <div class="box-header well" data-original-title="">
            <h2><i class="glyphicon glyphicon-list"></i> Usuarios por Perfil</h2>
        </div>
        <div class="box-content">
            <form class="container-fluid row">
                <div class="form-group col-md-6">
                    <label for="cmbPerfil">Seleccionar Perfil</label>
                    <select class="form-control select2 input-sm" style="width:100%;" id="cmbPerfil" data-selected=""></select>
                </div>
                <div class="col-md-6">
                    <label>&nbsp;</label>
                    <div>
                        <button class="btn btn-primary btn-sm" type="button" id="btnBuscarUsuarios"><i class="fa fa-search" aria-hidden="true"></i> Buscar usuarios</button>
                    </div>
                </div>
            </form>
            <br />
            <div class="container-fluid row">
                <div class="col-md-5">
                    <label>Lista de Usuarios</label>
                    <select name="from[]" id="undo_redo" class="form-control" size="15" multiple="multiple"></select>
                </div>
                <div class="col-md-1">
                    <br />
                    <br />
                    <button type="button" title="Asignar todos" id="undo_redo_rightAll" class="btn btn-default btn-sm center-block"><i class="glyphicon glyphicon-forward"></i></button>&nbsp;
                    <button type="button" title="Asignar" id="undo_redo_rightSelected" class="btn btn-default btn-sm center-block"><i class="glyphicon glyphicon-chevron-right"></i></button>&nbsp;
                    <button type="button" title="Desasignar" id="undo_redo_leftSelected" class="btn btn-default btn-sm center-block"><i class="glyphicon glyphicon-chevron-left"></i></button>&nbsp;
                    <button type="button" title="Desasignar todos" id="undo_redo_leftAll" class="btn btn-default btn-sm center-block"><i class="glyphicon glyphicon-backward"></i></button>&nbsp;
                </div>
                <div class="col-md-5">
                    <label>Usuarios Asignados</label>
                    <select name="to[]" id="undo_redo_to" class="form-control" size="15" multiple="multiple"></select>
                </div>
            </div>
            <br />
            <div class="container-fluid row">
                <div class="col-md-12">
                    <button class="btn btn-primary btn-sm pull-right" type="button" id="btnGuardar"><i class="fa fa-floppy-o" aria-hidden="true"></i>&nbsp;Guardar cambios</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/resources/js/app/seguridad/usuarioPerfil/usuarioPerfil.js"></script>
}