
@{
    ViewBag.Title = "Actividades de Servicio";
}

<input hidden id="hdnIdDetalleServicio" value="" />

<div class="modal-dialog modal-lg container-fluid" role="document">
    <!-- Modal content -->
    <div class="modal-content">
        <!-- Modal content header -->
        <div class="modal-header box-header well well-lg " style="height:50px">
            <h4 class="modal-title" id="tituloModal"><i class="fa fa-cubes"></i> @ViewBag.Title</h4>
        </div>
        <!-- Modal content body -->
        <div class="modal-body">
            <form id="FormDetalleServicio">
                <div class="row container-fluid d-flex justify-content-center">
                    <div class="row container-fluid">
                        <!--Detalle del Servicio-->
                        <div class="col-md-12 col-xs-10">
                            <div class=" col-md-12 col-sm-12">
                                <div class="form-group col-sm-12">
                                    <label for="txtDetalleServicio">Actividad de Servicio:</label>
                                </div>
                            </div>
                            <div class="col-md-12 col-sm-12">
                                <div class="form-group">
                                    <textarea class="form-control select2 input-sm" style="width:100%;height:45%" id="txtDetalleServicio" maxlength="500" placeholder="Ingrese Actividad del Servicio" tabindex="1"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            </form>
        </div>
        <div class="modal-footer">
            <div class="text-right">
                <button tabindex="1" class="btn btn-sm btn-default" id="btnGuardarDetalleServicio"><i class="fa fa-save"></i> Guardar</button>
                <button tabindex="1" class="btn btn-sm btn-primary" id="btnCerrarDetalleServicio"><i class="fa fa-times"></i> Cerrar</button>
                <button tabindex="1" class="btn btn-sm btn-default" id="btnActualizarDetalleServicio"><i class="fa fa-save"></i> Actualizar Detalle</button>
            </div>
        </div>
    </div>
</div>

