@{
    ViewBag.Title = "Bandeja Historial de Cotización";
}

<div class="modal-dialog modal-lg container-fluid" role="document">
    <!-- Modal content -->
    <div class="modal-content">
        <!-- Modal content header -->
        <div class="modal-header box-header well well-sm" style="padding-bottom: 30px;">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="tituloModal"><i class="fa fa-history"></i> @ViewBag.Title</h4>
        </div>
        <!-- Modal content body -->
        <div class="modal-body d-flex justify-content-center" align-items-center>
            <form id="formRegistro" class="d-flex flex-row">
                <div class="row container-fluid d-flex justify-content-center">
                    <div class="row container-fluid">
                        <div class="col-md-4 col-sm-12">
                            <label for="txtCodProducto">C&oacute;digo de Cotizaci&oacute;n: </label>
                            <div class="form-group">
                                <input placeholder="Ingresar código de cotización" type="text" class="form-control input-sm" id="txtCodCotizacion" value="">
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <button class="btn btn-primary btn-sm" type="button" id="btnBuscarHistorial"><i class="fa fa-search" aria-hidden="true"></i>  Buscar</button>
                        @*<button class="btn btn-default btn-sm" type="button" data-target="#modalRegistraProductos" data-toggle="modal" id="btnAñadirProductos"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp; Añadir Producto</button>*@
                        <span id="hidden_fields"></span>
                    </div>
                    <br />
                    <div class="table-responsive">
                        <table id="tablaHistorial" class="table table-hover table-condensed table-striped table-bordered" width="100%">
                            <thead>
                                <tr>
                                    <th style="text-align:center; width:5%">N° Cotización</th>
                                    <th style="text-align:center; width:10%">Fecha</th>
                                    <th style="text-align:center; width:10%">Contacto</th>
                                    <th style="text-align:center; width:15%">Plazo Entrega</th>
                                    <th style="text-align:center; width:10%">Forma Pago</th>
                                    <th style="text-align:center; width:5%">Moneda</th>
                                    <th style="text-align:center; width:15%">Usuario Registro</th>
                                    <th style="text-align:center; width:20%">Fecha Registro</th>
                                    <th style="text-align:center; width:20%">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                               
                            </tbody>
                        </table>
                    </div>
                </div>
                <br />
            </form>
        </div>
    </div>
</div>
