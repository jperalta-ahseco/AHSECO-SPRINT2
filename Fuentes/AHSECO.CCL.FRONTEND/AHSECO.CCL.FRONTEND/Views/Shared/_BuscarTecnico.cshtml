@{
    ViewBag.Title = "Bandeja de Técnicos";
}

<div class="modal-dialog modal-lg container-fluid" role="document" style="width:80%">
    <!-- Modal content -->
    <div class="modal-content" id="modalContent">
        <!-- Modal content header -->
        <div class="modal-header box-header well well-sm" style="padding-bottom: 30px;">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="tituloModal"><i class="fa fa-id-card" aria-hidden="true"></i> @ViewBag.Title</h4>
        </div>
        <!-- Modal content body -->
        <div class="modal-body d-flex justify-content-center" align-items-center>
            <div class="box-content">
                <form id="formSolicitudes">
                    <div class="row container-fluid">
                        <div class="col-md-4 col-sm-12">
                            <label for="cmbTipoDocumento">Tipo de Documento: </label>
                            <div class="form-group">
                                <select class="form-control select2 input-sm" style="width:100%;" id="cmbTipDocTecnico"></select>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <label for="txtNumDocTec">N&uacute;mero de Documento: </label>
                            <div class="form-group">
                                <input placeholder="Ingresar Número de Documento" type="text" class="form-control input-sm" id="txtNumDocTec" value="">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <label for="cmbTipoEmpleado">Tipo de Empleado:</label>
                            <select class="form-control select2 input-sm" style="width:100%;" id="cmbTipoEmpleado" tabindex="8"></select>
                        </div>
                    </div>
                    <div class="row container-fluid">
                        <div class="col-md-4 col-sm-12">
                            <label for="txtNombres">Nombres:</label>
                            <div class="form-group">
                                <input placeholder="Ingresar Nombres" maxlength="100" type="text" class="form-control input-sm" id="txtNombres" value="">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <label for="txtApePat">Apellido Paterno:</label>
                            <div class="form-group">
                                <input placeholder="Ingresar Apellido Paterno" maxlength="100" type="text" class="form-control input-sm" id="txtApePat" value="">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <label for="txtApeMat">Apellido Materno:</label>
                            <div class="form-group">
                                <input placeholder="Ingresar Apellido Materno" maxlength="100" type="text" class="form-control input-sm" id="txtApeMat" value="">
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <button class="btn btn-primary btn-sm" type="button" id="btnBuscarTecnico"><i class="fa fa-search"></i> Buscar</button>
                        <button class="btn btn-info btn-sm" type="button" data-dismiss="modal" id="btnRegresarTecnico" tabindex="14"><i class="fa fa-undo" aria-hidden="true"></i>&nbsp;Regresar</button>
                    </div>
                </form>
                <br />
                <div class="table-responsive">
                    <table id="tblTecnicos" class="table table-hover table-condensed table-striped table-bordered" width="100%">
                        <thead>
                            <tr>
                                <th style="text-align:center" width="20%">ID</th>
                                <th style="text-align: center; width:25%">D.N.I</th>
                                <th style="text-align: center; width:25%">Tipo de Documento</th>
                                <th style="text-align: center; width:25%">Nombre Completo</th>
                                <th style="text-align: center; width:10%">T&eacute;lefono</th>
                                <th style="text-align: center; width:25%">Correo</th>
                                <th style="text-align: center; width:25%">Zona</th>
                                <th style="text-align: center; width:25%">Tipo de Empleado</th>
                                <th style="text-align:center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


