@{
    ViewBag.Title = "Detalle de Cotización";
}

<div class="modal-dialog modal-lg container-fluid" role="document">
    <!-- Modal content -->
    <div class="modal-content">
        <!-- Modal content header -->
        <div class="modal-header box-header well well-sm" style="padding-bottom: 30px;">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="tituloModal"><i class="fa fa-cubes"></i> @ViewBag.Title</h4>
        </div>
        <!-- Modal content body -->
        <div class="modal-body d-flex justify-content-center" align-items-center>
            <form id="formRegistro" class="d-flex flex-row">
                <div class="row container-fluid d-flex justify-content-center">
                    <div class="row container-fluid">
                        <div class="col-md-4 col-sm-12">
                            <label for="txtSelectNomProducto">Nombre de Producto: </label>
                            <div class="form-group">
                                <input placeholder="Ingresar nombre de producto" type="text" class="form-control input-sm" id="txtSelectNomProducto" value="">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <label for="txtCodProducto">C&oacute;digo Producto: </label>
                            <div class="form-group">
                                <input placeholder="Ingresar código de producto" type="text" class="form-control input-sm" id="txtSelectCodProducto" value="">
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <button class="btn btn-primary btn-sm" type="button" id="btnBuscar"><i class="fa fa-search" aria-hidden="true"></i>  Buscar</button>
                        <button class="btn btn-default btn-sm" type="button" data-target="#modalRegistraProductos" data-toggle="modal" id="btnAñadirProductos"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp; Añadir Producto</button>
                        <button class="btn btn-default btn-sm" type="button" id="btnGrabarDetalle"><i class="fa fa-save" aria-hidden="true"></i>  Grabar Detalle</button>
                        <span id="hidden_fields"></span>
                    </div>
                    <br />
                    <div class="table-responsive">
                        <table id="tblConsultaProductos" class="table table-hover table-condensed table-striped table-bordered" width="100%">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th style="text-align:center; width:7%">N°</th>
                                    <th style="text-align:center; width:20%">C&oacute;digo</th>
                                    <th style="text-align:center; width:20%">Familia</th>
                                    <th style="text-align:center; width:35%">Descripcion</th>
                                    <th style="text-align:center; width:10%">Stock Disponible</th>
                                    <th style="text-align:center; width:5%">Precio de Referencia</th>
                                    <th style="text-align:center; width:15%">Unidad Medida</th>
                                    <th style="text-align:center; width:20%">Cantidad</th>
                                    <th style="text-align:center; width:20%">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="bodyProductosSelect">
                                <tr id="NoRegSelectProduct"><td colspan="9"><center>No se han seleccionado productos</center></td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <br />
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalRegistraProductos" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" >
    @{
        Html.RenderPartial("_RegistraProductos");
    }
</div>