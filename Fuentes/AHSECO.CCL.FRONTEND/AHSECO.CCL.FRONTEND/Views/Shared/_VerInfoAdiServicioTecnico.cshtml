@using AHSECO.CCL.FRONTEND.Core;

@{
    ViewBag.Title = "Información Adicional";

}


<div class="modal-dialog modal-lg container-fluid" role="document" style="width: 90%">
    <!-- Modal content -->
    <div class="modal-content" id="modalContent">
        <!-- Modal content header -->
        <div class="modal-header box-header well well-sm" style="padding-bottom: 30px;">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="tituloModal"><i class="fa fa-bell" aria-hidden="true"></i> @ViewBag.Title</h4>
        </div>
        <!-- Modal content body -->
        <div class="modal-body d-flex justify-content-center" align-items-center>
            <form id="formInfoAdiST" class="d-flex flex-row">
                <div class="row container-fluid d-flex justify-content-center">
                    <div class="row container-fluid">
                        <div class="col-md-4 col-sm-12">
                            <label for="txtTieneManual">¿Tiene Manuales?: </label>
                            <div class="form-group">
                                <input type="text" class="form-control input-sm" id="txtTieneManual" value="" disabled>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <label for="txtTieneCalib">¿Tiene Calibraci&oacute;n?: </label>
                            <div class="form-group">
                                <input type="text" class="form-control input-sm" id="txtTieneCalib" value="" disabled>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <label for="txtTieneVideo">¿Tiene Videos?: </label>
                            <div class="form-group">
                                <input type="text" class="form-control input-sm" id="txtTieneVideo" value="" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row container-fluid">
                        <div class="col-md-4 col-sm-12">
                            <label for="txtTieneMantPrev">¿Tiene Mantenimientos Preventivos?: </label>
                            <div class="form-group">
                                <input type="text" class="form-control input-sm" id="txtTieneMantPrev" value="" disabled>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <label for="txtTieneInst">¿Tiene Instalaci&oacute;n?: </label>
                            <div class="form-group">
                                <input type="text" class="form-control input-sm" id="txtTieneInst" value="" disabled>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <label for="txtTieneCapacitacion">¿Tiene Capacitaci&oacute;n?: </label>
                            <div class="form-group">
                                <input type="text" class="form-control input-sm" id="txtTieneCapacitacion" value="" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row container-fluid">
                        <div class="col-md-4 col-sm-12">
                            <label for="txtReqPlaca">¿Requiere Placa?: </label>
                            <div class="form-group">
                                <input type="text" class="form-control input-sm" id="txtReqPlaca" value="" disabled>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <label for="txtTieneGarantiaAdi">¿Tiene Garantia Adicional?: </label>
                            <div class="form-group">
                                <input type="text" class="form-control input-sm" id="txtTieneGarantiaAdi" value="" disabled>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <label for="txtGarantiaAdi">Garantia Adicional: </label>
                            <div class="form-group">
                                <input type="text" class="form-control input-sm" id="txtGarantiaAdi" value="" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row container-fluid">
                        <div class="col-md-12 col-sm-12">
                            <label for="txtDimension">Dimensiones: </label>
                            <div class="form-group">
                                <input type="text" class="form-control input-sm" id="txtDimension" value="" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row container-fluid">
                        <div class="col-md-12 col-sm-12">
                            <label for="txtObsCliente">Observaci&oacute;n Cliente: </label>
                            <div class="form-group">
                                <textarea disabled class="form-control select2 input-sm" style="width:100%;height:45%" id="txtObsCliente" maxlength="500" tabindex="1"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row container-fluid">
                        <div class="col-md-12 col-sm-12">
                            <label for="txtObsCliente">Observaci&oacute;n Despacho: </label>
                            <div class="form-group">
                                <textarea disabled class="form-control select2 input-sm" style="width:100%;height:45%" id="txtObsDespacho" maxlength="500" tabindex="1"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            </form>
        </div>
    </div>
</div>


