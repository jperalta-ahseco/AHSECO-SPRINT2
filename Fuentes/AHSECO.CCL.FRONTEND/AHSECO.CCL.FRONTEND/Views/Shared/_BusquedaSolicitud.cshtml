@{
    ViewBag.Title = "Bandeja de Solicitudes";
}

<div class="modal-dialog modal-lg container-fluid" role="document">
    <!-- Modal content -->
    <div class="modal-content" id="modalContent">
        <!-- Modal content header -->
        <div class="modal-header box-header well well-sm" style="padding-bottom: 30px;">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="tituloModal"><i class="fa fa-list" aria-hidden="true"></i> @ViewBag.Title</h4>
        </div>
        <!-- Modal content body -->
        <div class="modal-body d-flex justify-content-center" align-items-center>
            <div class="box-content">
                <form id="formSolicitudes">
                    <div class="row container-fluid">
                        <div class="col-md-6 col-sm-12">
                            <label for="txtSolicitud">N&uacute;mero de Solicitud: </label>
                            <div class="form-group">
                                <input placeholder="Ingresar Solicitud" type="text" class="form-control input-sm" id="txtSolicitud" value="">
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label for="cmbClienteSol">Cliente:</label>
                            <div class="input-group col-sm-12 col-md-12 col-lg-12">
                                <select aria-hide="false" id="cmbClienteSol" type="text" class="input form-control input-sm">
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <button class="btn btn-primary btn-sm" type="button" id="btnBuscarSolicitud"><i class="fa fa-search"></i> Buscar</button>
                        <button class="btn btn-info btn-sm" type="button" data-dismiss="modal" id="btnRegresarSolicitud" tabindex="14"><i class="fa fa-undo" aria-hidden="true"></i>&nbsp;Regresar</button>
                    </div>
                </form>
                <br />
                <div class="table-responsive">
                    <table id="tblSolicitudes" class="table table-hover table-condensed table-striped table-bordered" width="100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th style="text-align: center; width:5%;">N°Solicitud</th>
                                <th style="text-align: center; width:10%;">Razón Social</th>
                                <th style="text-align: center; width:10%;">Flujo</th>
                                <th style="text-align: center; width:15%;">Fecha de Solicitud</th>
                                <th style="text-align: center; width:25%;">Tipo de Solicitud</th>
                                <th style="text-align: center; width:10%;">Estado</th>
                                <th style="text-align: center; width:15%;">Registrado por:</th>
                                <th style="text-align: center; width:60%;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

