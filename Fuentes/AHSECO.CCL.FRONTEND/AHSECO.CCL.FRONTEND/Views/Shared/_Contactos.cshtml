@{
    ViewBag.Title = "Bandeja de Contactos";
}

<div class="modal-dialog modal-lg container-fluid" role="document">
    <!-- Modal content -->
    <div class="modal-content" id="modalContent">
        <!-- Modal content header -->
        <div class="modal-header box-header well well-sm" style="padding-bottom: 30px;">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="tituloModal">@ViewBag.Title</h4>
        </div>
        <!-- Modal content body -->
        <div class="modal-body d-flex justify-content-center" align-items-center>
            <form id="formRegistro" class="d-flex flex-row">
                <div class="row container-fluid d-flex justify-content-center">
                    <div class="row container-fluid">
                        <div class="col-md-3 col-sm-4 col-xs-12">
                            <div class="form-group">
                                <label for="txtContacto">Nombre de Contacto:</label>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <div class="form-group">
                                <input placeholder="Ingresar Nombre: " type="text" class="form-control input-sm" id="txtContacto" value="">
                            </div>
                        </div>
                    </div>
                    <div class="row container-fluid">
                        <div class="col-md-3 col-sm-4 col-xs-12">
                            <div class="form-group">
                                <label for="txtConsultaEstablecimiento">Nombre de Establecimiento:</label>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-12">
                            <div class="form-group">
                                <input placeholder="Ingresar Nombre de Establecimiento" type="text" class="form-control input-sm" id="txtConsultaEstablecimiento" value="">
                            </div>
                        </div>
                    </div>
                    <div class="text-right">
                        <button class="btn btn-primary btn-sm" type="button" id="btnBuscarContactos"><i class="fa fa-search"></i> Buscar</button>
                        <span id="hidden_fields"></span>
                        <button class="btn btn-primary btn-sm" type="button" id="btnAñadir" data-toggle="modal" data-target="#modalModificarContacto"><i class="fa fa-plus"></i> Agregar Contacto</button>
                        <button class="btn btn-success btn-sm" type="button" id="btnLimpiarTodo"><i class="fa fa-trash-o" aria-hidden="true"></i>Limpiar Todo</button>
                        </div>
                    <br />
                    <div class="table-responsive">
                        <table id="tblContactos" class="table table-hover table-condensed table-striped table-bordered" width="100%">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th style="text-align: center; width:20%">Tip. de Doc.</th>
                                    <th style="text-align: center; width:20%">N&uacute;m. de Doc.</th>
                                    <th style="text-align: center; width:20%">Nombres y Apellidos</th>
                                    <th style="text-align: center; width: 20%; padding-bottom: 20px;">Establecimiento</th>
                                    <th style="text-align: center; width: 20%; padding-bottom: 20px;">Area Contacto</th>
                                    <th style="text-align: center; width:20%">Tel&eacute;fono 1</th>
                                    <th style="text-align: center; width:20%">Tel&eacute;fono 2</th>
                                    <th style="text-align: center; width: 20%; padding-bottom: 20px;">Cargo</th>
                                    <th style="text-align: center; width: 20%; padding-bottom: 20px;">Correo</th>
                                    <th style="text-align: center; width: 20%; padding-bottom: 20px;">Estado</th>
                                    <th style="padding-bottom: 20px;"><center>Acciones</center></th>
                                </tr>
                            </thead>
                            <tbody id="contenidoTabla"></tbody>
                        </table>
                    </div>
                </div>
                <br/>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalModificarContacto" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    @{
        Html.RenderPartial("_ModificarContacto");
    }
</div>