
@{
    ViewBag.Title = "Mantenimientos Preventivos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="margin-right: 15px;">
    <h4><i class="glyphicon glyphicon-cog"></i> @ViewBag.Title</h4>
    <div class="box-inner">
        <div class="box-header well" data-original-title="">
            <h2><i class="glyphicon glyphicon-list"></i> Bandeja de Mantenimientos Preventivos</h2>
        </div>
        <div class="box-content">
            <form id="formPreventivo">
                <div class="row container-fluid" style="margin-bottom:10px">
                    <div class="col-md-4 col-sm-12">
                        <label for="txtIdMant">N° de Mantenimiento:</label>
                        <div class="input-group col-sm-12 col-md-12 col-lg-12">
                            <input class="form-control input-sm" type="text" id="txtIdMant" placeholder="Ingresar el número de Mantenimiento" />
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="txtSerie">N° de Serie:</label>
                        <div class="input-group col-sm-12 col-md-12 col-lg-12">
                            <input class="form-control input-sm" type="text" id="txtSerie" placeholder="Ingresar el número de serie" />
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="txtNumProc">N° Proceso:</label>
                        <div class="input-group col-sm-12 col-md-12 col-lg-12">
                            <input class="form-control input-sm" type="text" id="txtNumProc" placeholder="Ingresar el número de Proceso" />
                        </div>
                    </div>
                </div>
                <div class="row container-fluid">
                    <div class="col-md-4 col-sm-12">
                        <label for="txtNumOrdCompra">N° Orden de Compra:</label>
                        <div class="input-group col-sm-12 col-md-12 col-lg-12">
                            <input class="form-control input-sm" type="text" id="txtNumOrdCompra" placeholder="Ingresar el número de orden de compra" />
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="txtNumFianza">N° Fianza:</label>
                        <div class="input-group col-sm-12 col-md-12 col-lg-12">
                            <input class="form-control input-sm" type="text" id="txtNumFianza" placeholder="Ingresar el número de fianza" />
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="cmbempresa">Empresa:</label>
                        <div class="form-group">
                            <select class="form-control select2 input-sm" style="width:100%;" id="cmbempresa" tabindex="3"></select>
                        </div>
                    </div>
                </div>
                <div class="row container-fluid">
                    <div class="col-md-4 col-sm-12">
                        <label for="periodoIni">Periodo Inicio:</label>
                        <div class="input-group date">
                            <input type="text" class="form-control input-sm" id="periodoIni" aria-describedby="sizing-addon3" placeholder="mm/aaaa" maxlength="10">
                            <span class="input-group-addon input-sm" id="openPeriodoIni">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="periodoFin">Periodo Fin:</label>
                        <div class="input-group date">
                            <input type="text" class="form-control input-sm" id="periodoFin" aria-describedby="sizing-addon3" placeholder="mm/aaaa" maxlength="10">
                            <span class="input-group-addon input-sm" id="openPeriodoFin">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                </div>
                    <br />
                    <div class="text-right">
                        <button class="btn btn-primary btn-sm" type="button" id="btnBuscar"><i class="fa fa-search"></i> Buscar</button>
                        <span id="hidden_fields"></span>
                        <a class="btn btn-info btn-sm" type="button" id="btnExportar" href="BandejaPreventivo/GenerarReporte"><i class="fa fa-table"></i> Exportar</a>
                    </div>
            </form>
            <br />
            <div class="table-responsive">
                <table id="tblMantenimientos" class="table table-hover table-condensed table-striped table-bordered" width="100%">
                    <thead>
                        <tr>
                            <th style="text-align: center; width: 5%">N° Mantenimiento</th>
                            <th style="text-align: center; width: 5%">Num. Serie</th>
                            <th style="text-align: center; width: 15%">Nombre Equipo</th>
                            <th style="text-align: center; width: 5%">Fecha Instalación</th>
                            <th style="text-align: center; width: 5%">Fecha Próx. Mantenimiento</th>
                            <th style="text-align: center; width: 5%">Cantidad de Preventivos</th>
                            <th style="text-align: center; width: 5%">Prev. Realizados</th>
                            <th style="text-align: center; width: 5%">Prev. Pendientes</th>
                            <th style="text-align: center; width: 15%">Ubigeo Destino</th>
                            <th style="text-align: center; width: 5%">Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="modalUbigeo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    @{
        Html.RenderPartial("_Ubigeo");
    }
</div>
@section scripts{
    <script type="text/javascript" src="~/resources/js/app/ServicioTecnico/BandejaPreventivo/bandejaPreventivo.js"></script>
} 