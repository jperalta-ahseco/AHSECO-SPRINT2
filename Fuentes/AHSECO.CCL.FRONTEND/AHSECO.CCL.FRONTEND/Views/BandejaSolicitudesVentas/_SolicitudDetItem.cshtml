
@{
    ViewBag.Title = "Detalle de Item";
}

<div style="width:50%" class="modal-dialog modal-lg container-fluid" role="document">
    <!-- Modal content -->
    <div class="modal-content">
        <!-- Modal content header -->
        <div class="modal-header box-header well well-sm" style="padding-bottom: 30px;">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="tituloModal"><i class="fa fa-cubes"></i>Detalle de Producto / Servicio</h4>
        </div>
        <!-- Modal content body -->
        <div class="modal-body d-flex justify-content-center" align-items-center>
            <form id="formItem" class="d-flex flex-row">
                <div class="row container-fluid d-flex justify-content-center">
                    <div class="container-fluid">
                        <fieldset class="form-group">
                            <legend><b>Informaci&oacute;n General</b></legend>
                            <div class="row container-fluid">
                                <div class="col-md-3">
                                    <label for="DI_txtCodigo">C&oacute;digo: </label>
                                    <input disabled placeholder="Ingresar código de producto" type="text" class="form-control input-sm" id="DI_txtCodigo" value="">
                                    <input type="hidden" id="DI_hdnCodigoPadre" value="" />
                                </div>
                                <div class="col-md-7">
                                    <label for="DI_txtDescripcion">Descripci&oacute;n: </label>
                                    <input disabled placeholder="Ingresar nombre de producto" type="text" class="form-control input-sm" id="DI_txtDescripcion" value="">
                                </div>
                                <div class="col-md-2">
                                    <label for="DI_txtCantidad">Cantidad: </label>
                                    <input placeholder="Ingresar Cantidad" type="text" class="form-control input-sm" id="DI_txtCantidad" value="">
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="container-fluid">
                        <fieldset class="form-group">
                            <legend><b>Informaci&oacute;n de Costos</b></legend>
                            <div class="row container-fluid">
                                <div class="col-md-3">
                                    <label for="DI_txtCostoFOB">Costo FOB: </label>
                                    <input placeholder="Ingresar Costo" type="text" class="form-control input-sm" id="DI_txtCostoFOB" value="">
                                </div>
                                <div class="col-md-3">
                                    <label for="DI_txtValorUnitario">Val. Unitario: </label>
                                    <input placeholder="Ingresar Val. Unt." type="text" class="form-control input-sm" id="DI_txtValorUnitario" value="">
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="container-fluid">
                        <fieldset class="form-group">
                            <legend><b>Información del Env&iacute;o</b></legend>
                            <div class="row container-fluid">
                                <div class="col-md-6 col-content-middleleft">
                                    <div class="col-md-5">
                                        <label for="DI_radLLaveEnMano">LLave en mano: </label>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radLLaveEnMano" class="input-sm" id="DI_radLLaveEnMano_Si" value="S"></td>
                                                <td style="padding-top:5px"><label>SI</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radLLaveEnMano" class="input-sm" id="DI_radLLaveEnMano_No" value="N"></td>
                                                <td style="padding-top:5px"><label>NO</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="row container-fluid form-group">
                                <div class="col-md-12 col-content-middleleft">
                                    <div class="col-md-3">
                                        <label for="txtUbicacion">Ubigeo Destino :</label>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="input-group">
                                            <input readonly placeholder="Seleccione Ubigeo Destino" maxlength="6" type="text" class="form-control input-sm" id="txtUbicacion" value="" aria-describedby="sizing-addon3" style="cursor:pointer" data-toggle="modal" data-target="#modalUbigeo" />
                                            <span style="cursor:pointer" class="input-group-addon input-sm" id="searchUbigeo" data-toggle="modal" data-target="#modalUbigeo">
                                                <i class="fa fa-search"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row container-fluid form-group">
                                <div class="col-md-12 col-content-middleleft">
                                    <div class="col-md-3">
                                        <label for="DI_txtDireccion">Direcci&oacute;n :</label>
                                    </div>
                                    <div class="col-md-12">
                                        <input placeholder="Ingresar Dirección" type="text" class="form-control input-sm" id="DI_txtDireccion" value="">
                                    </div>
                                </div>
                            </div>
                            <div class="row container-fluid">
                                <div class="col-md-6 col-content-middleleft">
                                    <div class="col-md-5">
                                        <label for="DI_txtNroPiso">Piso: </label>
                                    </div>
                                    <div class="col-md-2">
                                        <input placeholder="Nro." type="text" class="form-control input-sm" id="DI_txtNroPiso" value="">
                                    </div>
                                </div>
                                <div class="col-md-6 col-content-middleleft">
                                    <div class="col-md-5">
                                        <label for="DI_txtDimensiones">Dimensiones: </label>
                                    </div>
                                    <div class="col-md-7">
                                        <input placeholder="Ingresar Dimensiones" type="text" class="form-control input-sm" id="DI_txtDimensiones" value="">
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="container-fluid">
                        <fieldset class="form-group">
                            <legend><b>Información Adicional</b></legend>
                            <div class="row container-fluid">
                                <div class="col-md-5 col-content-middleleft">
                                    <div class="col-md-8">
                                        <label for="DI_txtCantPreventivo">Cantidad Preventivo: </label>
                                    </div>
                                    <div class="col-md-3">
                                        <input placeholder="" type="text" class="form-control input-sm" id="DI_txtCantPreventivo" value="">
                                    </div>
                                </div>
                                <div class="col-md-7 col-content-middleleft">
                                    <div class="col-md-5">
                                        <label for="BI_cmbCicloPreventivo">Ciclo de Preventivo: </label>
                                    </div>
                                    <div class="col-md-7">
                                        <select class="form-control select2 input-sm" style="width:100%;" id="BI_cmbCicloPreventivo" data-selected=""></select>
                                    </div>
                                </div>
                            </div>
                            <div class="row container-fluid">
                                <div class="col-xs-6 col-content-middleleft">
                                    <div class="col-md-4">
                                        <label for="DI_radManuales" style="flex: 0 0 120px">Manuales: </label>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radManuales" class="input-sm" id="DI_radManuales_Si" value="Si"></td>
                                                <td style="padding-top:5px"><label>SI</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radManuales" class="input-sm inp" id="DI_radManuales_No" value="No"></td>
                                                <td style="padding-top:5px"><label>NO</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-6 col-content-middleleft">
                                    <div class="col-md-1">&nbsp;</div>
                                    <div class="col-md-6">
                                        <label for="DI_radVideos">Videos: </label>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radVideos" class="input-sm" id="DI_radVideos_Si" value="Si"></td>
                                                <td style="padding-top:5px"><label>SI</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radVideos" class="input-sm" id="DI_radVideos_No" value="No"></td>
                                                <td style="padding-top:5px"><label>NO</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="row container-fluid col-content-middleleft">
                                <div class="col-md-6 col-content-middleleft">
                                    <div class="col-md-8">
                                        <label for="DI_radInstaCapa">Instalaci&oacute;n y Capacitaci&oacute;n: </label>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radInstaCapa" class="input-sm" id="DI_radInstaCapa_Si" value="Si"></td>
                                                <td style="padding-top:5px"><label>SI</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radInstaCapa" class="input-sm" id="DI_radInstaCapa_No" value="No"></td>
                                                <td style="padding-top:5px"><label>NO</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-6 col-content-middleleft">
                                    <div class="col-md-1">&nbsp;</div>
                                    <div class="col-md-6">
                                        <label for="DI_txtGarantiaAdic">Garant&iacute;a Adicional: </label>
                                    </div>
                                    <div class="col-md-4">
                                        <input placeholder="" type="text" class="form-control input-sm" id="DI_txtGarantiaAdic" value="">
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-default btn-sm" type="button" id="DI_btnGuardar"><i class="fa fa-save" aria-hidden="true"></i> Guardar</button>
                        <button class="btn btn-danger btn-sm" type="button" id="DI_btnCerrar"><i class="fa fa-plus" aria-hidden="true"></i> Cancelar</button>
                        <span id="hidden_fields"></span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
