@using AHSECO.CCL.FRONTEND.Core;
@{
    ViewBag.Title = "Detalle de Item";
    var NombreRol = VariableSesion.getCadena("VENTA_NOMBRE_ROL");
}

<div style="width:80%" class="modal-dialog modal-lg container-fluid" role="document">
    <!-- Modal content -->
    <div class="modal-content">
        <!-- Modal content header -->
        <div class="modal-header box-header well well-sm" style="padding-bottom: 30px;">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="tituloModal"><i class="fa fa-cubes"></i>Detalle de Producto / Servicio</h4>
        </div>
        <!-- Modal content body -->
        <div class="modal-body d-flex justify-content-center" align-items-center>
            <form id="formItem" class="d-flex flex-row">
                <div class="row d-flex justify-content-center">
                    <div class="container-fluid">
                        <fieldset>
                            <legend><b>Informaci&oacute;n General</b></legend>
                            <div class="row container-fluid">
                                <div class="col-md-6">
                                    <div class="row container-fluid col-content-middleleft form-group">
                                        <div class="col-md-3">
                                            <label for="DI_txtCodigo">C&oacute;digo: </label>
                                        </div>
                                        <div class="col-md-6">
                                            <input disabled placeholder="Ingresar código de producto" type="text" class="form-control input-sm" id="DI_txtCodigo" value="">
                                            <input type="hidden" id="DI_hdnCodigo" value="" />
                                            <input type="hidden" id="DI_hdnCodigoPadre" value="" />
                                        </div>
                                    </div>
                                    <div class="row container-fluid col-content-middleleft form-group">
                                        <div class="col-md-3">
                                            <label for="DI_txtDescripcion">Descripci&oacute;n: </label>
                                        </div>
                                        <div class="col-md-8">
                                            <input disabled placeholder="Ingresar nombre de producto" type="text" class="form-control input-sm" id="DI_txtDescripcion" value="">
                                        </div>
                                    </div>
                                    <div class="row container-fluid col-content-middleleft form-group">
                                        <div class="col-md-3">
                                            <label for="DI_txtCantidad">Cantidad: </label>
                                        </div>
                                        <div class="col-md-2">
                                            <input placeholder="Cantidad" type="text" maxlength="8" class="form-control input-sm" id="DI_txtCantidad" value="">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-11">
                                        <div class="row container-fluid">
                                            <label for="DI_txtDescripcionAdic">Especificaciones / Caracteristicas: </label>
                                            <textarea placeholder="Ingresar Especificaciones <Opcional>" rows="5" class="form-control input-sm" id="DI_txtDescripcionAdic" value=""></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="container-fluid">
                        <fieldset class="form-group">
                            <legend><b>Informaci&oacute;n de Costos</b></legend>
                            <div class="row container-fluid form-group" style="@(NombreRol == "SGI_VENTA_GERENTE" || NombreRol == "SGI_VENTA_COSTOS" ? "" : "display:none")">
                                <div class="col-md-6 col-content-middleleft">
                                    <div class="col-md-3">
                                        <label for="DI_txtCostoFOB">Costo FOB: </label>
                                    </div>
                                    <div class="col-md-4">
                                        <input placeholder="Ingresar Costo" type="text" maxlength="20" class="form-control input-sm" id="DI_txtCostoFOB" value="">
                                    </div>
                                </div>
                                <div class="col-md-6 col-content-middleleft">
                                    <div class="col-md-3">
                                        <label for="DI_txtValorUnitario">Val. Unitario: </label>
                                    </div>
                                    <div class="col-md-4">
                                        <input placeholder="Ingresar Val. Unt." type="text" maxlength="20" class="form-control input-sm" id="DI_txtValorUnitario" value="">
                                    </div>
                                </div>
                            </div>
                            <div class="row container-fluid col-content-bottomleft">
                                <div class="col-md-6 col-content-middleleft">
                                    <div class="col-md-3">
                                        <label for="DI_txtGanancia">Ganancia (%): </label>
                                    </div>
                                    <div class="col-md-4">
                                        <input placeholder="Ingrese Ganancia (%)" type="text" maxlength="15" class="form-control input-sm" id="DI_txtGanancia" value="">
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="container-fluid">
                        <fieldset class="form-group">
                            <legend><b>Información del Env&iacute;o</b></legend>
                            <div class="row container-fluid col-content-middleleft">
                                <div class="col-md-4 col-content-middleleft">
                                    <div class="col-md-7">
                                        <label for="DI_radLLaveEnMano">LLave en mano: </label>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radLLaveEnMano" class="input-sm" id="DI_radLLaveEnMano_Si"></td>
                                                <td style="padding-top:5px"><label>SI</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radLLaveEnMano" class="input-sm" id="DI_radLLaveEnMano_No"></td>
                                                <td style="padding-top:5px"><label>NO</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-8 col-content-middleleft">
                                    <div class="col-md-3">
                                        <label for="txtUbicacion">Ubigeo Destino :</label>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="input-group">
                                            <input readonly placeholder="Seleccione Ubigeo Destino" maxlength="6" type="text" class="form-control input-sm" id="txtUbicacion" value="" aria-describedby="sizing-addon3" style="cursor:pointer" data-toggle="modal" data-target="#modalUbigeo" />
                                            <span style="cursor:pointer" class="input-group-addon input-sm" id="searchUbigeo" data-toggle="modal" data-target="#modalUbigeo">
                                                <i class="fa fa-search"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row container-fluid col-content-middleleft">
                                <div class="col-md-4 col-content-middleleft">
                                    <div class="col-md-7">
                                        <label for="DI_radCompraLocal">Compra Local: </label>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radCompraLocal" class="input-sm" id="DI_radCompraLocal_Si"></td>
                                                <td style="padding-top:5px"><label>SI</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radCompraLocal" class="input-sm" id="DI_radCompraLocal_No"></td>
                                                <td style="padding-top:5px"><label>NO</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-8 col-content-middleleft">
                                    <div class="col-md-3">
                                        <label for="DI_txtDireccion">Direcci&oacute;n :</label>
                                    </div>
                                    <div class="col-md-9">
                                        <input placeholder="Ingresar Dirección" type="text" maxlength="150" class="form-control input-sm" id="DI_txtDireccion" value="">
                                    </div>
                                </div>
                            </div>
                            <div class="row container-fluid">
                                <div class="col-md-4 col-content-middleleft">&nbsp;</div>
                                <div class="col-md-3 col-content-middleleft">
                                    <div class="col-md-8">
                                        <label for="DI_txtNroPiso">Piso: </label>
                                    </div>
                                    <div class="col-md-3">
                                        <input placeholder="Nro." type="text" maxlength="2" class="form-control input-sm" id="DI_txtNroPiso" value="">
                                    </div>
                                </div>
                                <div class="col-md-3 col-content-middleleft">
                                    <div class="col-md-5">
                                        <label for="DI_txtDimensiones">Dimensiones: </label>
                                    </div>
                                    <div class="col-md-8">
                                        <input placeholder="Ingresar Dimensiones" type="text" maxlength="50" class="form-control input-sm" id="DI_txtDimensiones" value="">
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="container-fluid">
                        <fieldset class="form-group">
                            <legend><b>Información Adicional</b></legend>
                            <div class="row container-fluid col-content-middleleft">
                                <div class="col-md-4 col-content-middleleft">
                                    <div class="col-md-7">
                                        <label for="DI_radManuales" style="flex: 0 0 120px">Manuales: </label>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radManuales" class="input-sm" id="DI_radManuales_Si"></td>
                                                <td style="padding-top:5px"><label>SI</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radManuales" class="input-sm inp" id="DI_radManuales_No"></td>
                                                <td style="padding-top:5px"><label>NO</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-4 col-content-middleleft">
                                    <div class="col-md-6">
                                        <label for="DI_txtCantPreventivo">Cantidad Preventivo: </label>
                                    </div>
                                    <div class="col-md-2">
                                        <input placeholder="Cant." type="text" maxlength="2" class="form-control input-sm" id="DI_txtCantPreventivo" value="">
                                    </div>
                                </div>
                                <div class="col-md-4 col-content-middleleft">
                                    <div class="col-md-6">
                                        <label for="DI_cmbCicloPreventivo">Ciclo de Preventivo: </label>
                                    </div>
                                    <div class="col-md-6">
                                        <select class="form-control select2 input-sm" style="width:100%;" id="DI_cmbCicloPreventivo" data-selected=""></select>
                                    </div>
                                </div>
                            </div>
                            <div class="row container-fluid col-content-middleleft">
                                <div class="col-md-4 col-content-middleleft">
                                    <div class="col-md-7">
                                        <label for="DI_radVideos">Videos: </label>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radVideos" class="input-sm" id="DI_radVideos_Si"></td>
                                                <td style="padding-top:5px"><label>SI</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radVideos" class="input-sm" id="DI_radVideos_No"></td>
                                                <td style="padding-top:5px"><label>NO</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-4 col-content-middleleft">
                                    <div class="col-md-6">
                                        <label for="DI_txtGarantiaAdic">Garant&iacute;a Adicional: </label>
                                    </div>
                                    <div class="col-md-4">
                                        <input placeholder="Garantía Adic." type="text" maxlength="50" class="form-control input-sm" id="DI_txtGarantiaAdic" value="">
                                    </div>
                                </div>
                                <div class="col-md-4 col-content-middleleft">
                                    <div class="col-md-6">
                                        <label for="DI_txtFechaLimite">Fecha L&iacute;mite Instalaci&oacute;n: </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input placeholder="Garantía Adic." type="text" maxlength="8" class="form-control input-sm" id="DI_txtFechaLimite" value="">
                                    </div>
                                </div>
                            </div>
                            <div class="row container-fluid col-content-middleleft">
                                <div class="col-md-4 col-content-middleleft">
                                    <div class="col-md-7">
                                        <label for="DI_radInstaCapa">Instalaci&oacute;n y Capacitaci&oacute;n: </label>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radInstaCapa" class="input-sm" id="DI_radInstaCapa_Si"></td>
                                                <td style="padding-top:5px"><label>SI</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-md-2">
                                        <table style="width:100%">
                                            <tr>
                                                <td><input type="radio" name="DI_radInstaCapa" class="input-sm" id="DI_radInstaCapa_No"></td>
                                                <td style="padding-top:5px"><label>NO</label></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                                <div class="col-md-4 col-content-middleleft">
                                    <div class="col-md-6">
                                        <label for="DI_txtAmbienteInsta">Ambiente a Instalar: </label>
                                    </div>
                                    <div class="col-md-6">
                                        <input placeholder="Garantía Adic." type="text" maxlength="150" class="form-control input-sm" id="DI_txtAmbienteInsta" value="">
                                    </div>
                                </div>
                                <div class="col-md-4 col-content-middleleft">

                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-default btn-sm" type="button" id="DI_btnGuardar"><i class="fa fa-save" aria-hidden="true"></i> Guardar</button>
                        <button class="btn btn-danger btn-sm" type="button" id="DI_btnCerrar"><i class="fa fa-plus" aria-hidden="true"></i> Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
