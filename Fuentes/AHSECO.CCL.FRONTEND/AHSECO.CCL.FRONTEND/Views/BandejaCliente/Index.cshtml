
@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="margin-right: 15px;">
    <h4><i class="glyphicon glyphicon-cog"></i> @ViewBag.Title</h4>
    <div class="box-inner">
        <div class="box-header well" data-original-title="">
            <h2><i class="glyphicon glyphicon-list"></i> Bandeja de Clientes</h2>
        </div>
        <div class="box-content">
            <form id="formMantCliente">
                <div class="row container-fluid">
                    <div class="col-md-4 col-sm-12">
                        <label for="txtRuc">R.U.C:</label>
                        <div class="form-group">
                            <input placeholder="Ingresar RUC" maxlength="11" type="text" class="form-control input-sm" id="txtRuc" value="">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="txtNomEmpresa">Nombre Empresa:</label>
                        <div class="form-group">
                            <input placeholder="Nombre de Empresa" type="text" class="form-control input-sm" id="txtNomEmpresa" value="">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-7 col-xs-12">
                        <label for="cmbAsesor">Asesor:</label>
                        <div class="form-group">
                            <select class="form-control select2 input-sm" style="width:100%;" id="cmbAsesor" data-selected="">
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row container-fluid">
                    <div class="col-md-4 col-sm-12">
                        <label for="txtUbicacion">Sector: </label>
                        <div class="form-group">
                            <input placeholder="Sector" type="text" class="form-control input-sm" id="txtSector" value="">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="txtTipDoc">Estado:</label>
                        <div class="input-group col-sm-12 col-md-12 col-lg-12">
                            <select aria-hide="false" id="cmbEstado" type="text" class="input form-control input-sm">
                                <option value=" ">--Todos--</option>
                                <option value=1>ACTIVO</option>
                                <option value=0>INACTIVO</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="cmbCategoria">Categor&iacute;a:</label>
                        <div class="input-group col-sm-12 col-md-12 col-lg-12">
                            <select aria-hide="false" id="cmbCategoria" type="text" class="input form-control input-sm">
                                <option></option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row container-fluid">
                    <div class="col-md-4 col-sm-12">
                        <label for="txtFecIni">Fecha Inicio:</label>
                        <div class="input-group date">
                            <input type="text" class="form-control input-sm" id="dateFecIni" aria-describedby="sizing-addon3" placeholder="dd/mm/aaaa" maxlength="10">
                            <span class="input-group-addon input-sm" id="openRegFecIni">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="txtFecFin">Fecha Final:</label>
                        <div class="input-group date">
                            <input type="text" class="form-control input-sm" id="dateFecFin" aria-describedby="sizing-addon3" placeholder="dd/mm/aaaa" maxlength="10">
                            <span class="input-group-addon input-sm" id="openRegFecFin">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="txtUbicacion">Ubicaci&oacute;n:</label>
                        <div class="form-group">
                            <div class="input-group input-group-sm date">
                                <input disabled maxlength="6" type="text" class="form-control input-sm" id="txtUbicacion" value="" aria-describedby="sizing-addon3" />
                                <span style="cursor:pointer" class="input-group-addon input-sm" id="searchUbigeo" data-toggle="modal" data-target="#modalUbigeo">
                                    <i class="fa fa-search"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="text-right">
                    <button class="btn btn-primary btn-sm" type="button" id="btnBuscar"><i class="fa fa-search"></i> Buscar</button>
                    <span id="hidden_fields"></span>
                    <a class="btn btn-info btn-sm" type="button" id="btnExportar" href="BandejaCliente/GenerarReportesClientes"><i class="fa fa-table"></i> Exportar</a>
                    <button class="btn btn-success btn-sm" type="button" id="btnNuevo"><i class="fa fa-plus"></i> Nuevo</button>
                </div>
            </form>

            <br />
            <div class="table-responsive">
                <table id="tblClientes" class="table table-hover table-condensed table-striped table-bordered" width="100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th style="text-align: center; width:20%;padding-bottom: 20px;">RUC</th>
                            <th style="text-align: center; width:20%;padding-bottom: 10px;">Nombre Empresa</th>
                            <th style="text-align: center; width:20%;padding-bottom: 10px;">Sector Cliente</th>
                            <th style="text-align: center; width:50px;padding-bottom: 20px;">Categor&iacute;a</th>
                            <th style="text-align: center; width:20%;padding-bottom: 10px;">Direcci&oacute;n Fiscal</th>
                            <th style="text-align: center; width:20%;padding-bottom: 20px;">Tel&eacute;fono</th>
                            <th style="text-align: center; width:20%;padding-bottom: 20px;">Correo</th>
                            <th style="text-align: center; width: 20%; padding-bottom: 10px;">N° de Contactos</th>
                            <th style="text-align: center; width: 20%; padding-bottom: 20px;">Departamento</th>
                            <th style="text-align: center; width: 20%; padding-bottom: 20px;">Provincia</th>
                            <th style="text-align: center; width: 20%; padding-bottom: 20px;">Distrito</th>
                            <th style="text-align: center; width: 50px; padding-bottom: 20px;">Estado</th>
                            <th style="text-align: center; width: 50px; padding-bottom: 10px;">Asesor Asignado</th>
                            <th style="text-align: center; width:20%">Fecha de Registro</th>
                            <th style="text-align: center; padding-bottom: 20px">Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalUbigeo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    @{
        Html.RenderPartial("_Ubigeo");
    }
</div>
@section scripts{
    <script type="text/javascript" src="~/resources/js/app/mantenimientos/cliente/bandejaCliente.js"></script>
}

