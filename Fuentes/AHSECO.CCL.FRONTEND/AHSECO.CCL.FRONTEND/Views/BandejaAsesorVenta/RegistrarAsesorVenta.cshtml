

@{
    ViewBag.Title = "Mantenimientos de Asesor de Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="margin-right: 15px;">
    <h4><i class="glyphicon glyphicon-cog"></i> @ViewBag.Title</h4>
    <div class="box-inner">
        <div class="box-header well" data-original-title="">
            <h2><i class="glyphicon glyphicon-list"></i> <span id="txtTitleAsesorVenta">Registro de Asesor de Ventas</span></h2>
        </div>
        <div class="box-content">
            <form id="formRegisterAsesor">
                <div class="row container-fluid ">
                    <div class="col-md-4 col-sm-12">
                        <label for="txtNombreAsesorVenta">Nombres:</label>
                        <div class="form-group">
                            <input placeholder="Ingresar Nombre" maxlength="100" type="text" class="form-control input-sm" id="txtNombreAsesorVenta" value="">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="txtApePat">Apellido Paterno:</label>
                        <div class="form-group">
                            <input placeholder="Ingresar Apellido Paterno" maxlength="100" type="text" class="form-control input-sm" id="txtApePat" value="">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="txtApeMat">Apellido Materno:</label>
                        <div class="form-group">
                            <input placeholder="Ingresar Apellido Materno" maxlength="100" type="text" class="form-control input-sm" id="txtApeMat" value="">
                        </div>
                    </div>
                </div>
                <div class="row container-fluid ">

                    <div class="col-md-4 col-sm-12">
                        <label for="txtCentroLabores">Centro de Labores:</label>
                        <div class="form-group">
                            <div class="input-group input-group-sm date">
                                <input type="text" class="form-control input-sm" id="txtCentroLabores" value="" placeholder="--Seleccione Lugar Laboral--" aria-describedby="sizing-addon3" disabled="disabled" />
                                <span style="cursor:pointer" class="input-group-addon input-sm" id="searchUbigeo" data-toggle="modal" data-target="#modalUbigeo">
                                    <i class="fa fa-search"></i>
                                </span>
                                <span style="cursor:pointer" class="input-group-addon input-sm" id="deleteUbigeo" data-toggle="modal">
                                    <i class="fa fa-trash"></i>
                                </span>
                                <input type="hidden" id="txtCodigoUbigeo" value="" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="txtTel">Tel&eacute;fono:</label>
                        <div class="form-group">
                            <input placeholder="Ingresar Telefono" maxlength="15" type="text" class="form-control input-sm" id="txtTelefono" value="">
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="txtEmail">Email:</label>
                        <div class="form-group">
                            <input placeholder="Ingresar Email" maxlength="35" type="text" class="form-control input-sm" id="txtCorreo" value="">
                        </div>
                    </div>
                </div>

                <div class="row container-fluid ">
                    <div class="col-md-4 col-sm-12">
                        <label for="txtEst">Estado:</label>
                        <div class="form-group">
                            <select class="form-control select2 input-sm" style="width:100%;" id="cmbEstReg">
                                <option selected value="1">Activo</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        &nbsp;
                    </div>
                    <div class="col-md-4 col-sm-12">
                        &nbsp;
                    </div>
                </div>


                <div class="text-right">
                    <button class="btn btn-info btn-sm" type="submit" id="btnRegistrar"><i class="fa fa-plus"></i> Registrar Asesor de Ventas</button>
                    <button class="btn btn-danger btn-sm" type="button" id="btnCancelar"><i class="fa fa-times"></i> Cancelar</button>


                </div>
            </form>

            <br />

        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalUbigeo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    @{
        Html.RenderPartial("_Ubigeo");
    }
</div>
@section scripts{
    <script type="text/javascript" src="~/resources/js/app/mantenimientos/asesorventa/manipularAsesorVenta.js"></script>
}
