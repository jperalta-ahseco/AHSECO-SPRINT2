
@{
    ViewBag.Title = "Mantenimiento Servicios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="margin-right: 15px;">
    <h4><i class="glyphicon glyphicon-cog"></i> @ViewBag.Title</h4>
    <div class="box-inner">
        <div class="box-header well" data-original-title="">
            <h2><i class="glyphicon glyphicon-list"></i> Bandeja de Servicios</h2>
        </div>
        <div class="box-content">
            <form id="formServicio">

                <!--Primera Fila-->
                <div class="row container-fluid">
                    <div class="col-md-4 col-sm-12">
                        <label for="txtEquipo">Equipo:</label>
                        <!--
    <select class="form-control select2 input-sm" style="width:100%;" id="cmbEquipo" tabindex="1"></select>
    -->
                        <input placeholder="Ingrese Equipo" type="text" class="form-control input-sm" id="txtEquipo" value="">
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="txtMarca">Marca:</label>
                        <input placeholder="Ingrese Marca" type="text" class="form-control input-sm" id="txtMarca" value="">
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="txtModelo">Modelo:</label>
                        <div class="form-group">
                            <input placeholder="Ingrese Modelo" type="text" class="form-control input-sm" id="txtModelo" value="">
                        </div>
                    </div>
                </div>
                <!--Segunda Fila-->
                <div class="row container-fluid">

                    <div class="col-md-4 col-sm-12">
                        <label for="cmbTipoServicio">Tipo de Servicio:</label>
                        <select class="form-control select2 input-sm" style="width:100%;" id="cmbTipoServicio" tabindex="4"></select>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="cmbEstado">Estado:</label>
                        <select class="form-control select2 input-sm" style="width:100%;" id="cmbEstado" tabindex="5"></select>
                    </div>
                    <div class="col-md-4 col-sm-12">
                        <label for="txtCodServicio">Código Servicio:</label>
                        <input placeholder="Ingrese código de servicio" type="text" class="form-control input-sm" id="txtCodServicio" value="">
                    </div>
                </div>
                <br />
                <div class="text-right">
                    <button class="btn btn-success btn-sm " type="button" id="btnNuevo"><i class="fa fa-plus"></i> Agregar Nuevo</button>
                    <button class="btn btn-primary btn-sm" type="button" id="btnBuscar"><i class="fa fa-search"></i> Buscar</button>
                    <span id="hidden_fields"></span>
                    <a class="btn btn-info btn-sm " type="button" id="btnExportar" href="BandejaServicios/ExportarServicios"><i class="fa fa-table"></i> Exportar</a>
                </div>

            </form>

            <br />
            <div class="table-responsive">
                <table id="tblServicio" class="table table-hover table-condensed table-striped table-bordered" width="100%">
                    <thead>
                        <tr>
                            <th style="text-align:center">C&oacute;digo Servicio</th>
                            <th style="text-align:center; padding-bottom:14px" width="30%"><center>Equipo</center></th>
                            <th style="text-align: center; width: 5%; padding-bottom: 14px"><center>Modelo</center></th>
                            <th style="text-align: center; width: 10%; padding-bottom: 14px"><center>Marca</center></th>
                            <th style="text-align: center; width:10%"><center>Precio Software</center></th>
                            <th style="text-align: center; width:10%"><center>Precio Preventivo</center></th>
                            <th style="text-align: center; width:10%"><center>Precio Capacitaci&oacute;n</center></th>
                            <th style="text-align: center; width:10%"><center>Tipo de Servicio</center></th>
                            <th style="text-align: center; width: 10%; padding-bottom: 14px"><center>Estado</center></th>
                            <th style="text-align: center; width: 10%; padding-bottom: 14px">Acciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="~/resources/js/app/mantenimientos/servicios/bandejaServicios.js"></script>
}
