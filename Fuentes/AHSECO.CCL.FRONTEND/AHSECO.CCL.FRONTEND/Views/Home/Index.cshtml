@{
    ViewBag.Title = "Sistema de Gestión Interna";
}

<div class="modal fade modalalertastop" id="ModalMensaje" tabindex="-1" role="dialog"
     data-backdrop="static" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="close" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <div class="">
                    <h4 style="text-align:center"><i style="color: #a94442" class="glyphicon glyphicon-info-sign"></i><span class="colortituloseccion"></span></h4>
                    <div id="Mensaje" class="modal-body alert-success text-center">
                        @{
                            if (!string.IsNullOrWhiteSpace(ViewBag.Mensaje))
                            {
                                @ViewBag.Mensaje;
                            }
                            else
                            {
                                <p>"No está autorizado para acceder a esta página. Por favor, ingrese mediante el Login del sistema."</p>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="modal-footer modalalertapiebotones centrartd">
                <button type="button" id="btnAceptar" class="btn btn-primary" data-dismiss="modal"> Aceptar </button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        if (window.opener == window) {
            $("#btnAceptar").hide();
            $("#close").hide();
        }
        $('#ModalMensaje').modal("show");
        $("#btnAceptar").click(function () {
            window.open('', '_self', '');
            window.close();
        });

    </script>
}